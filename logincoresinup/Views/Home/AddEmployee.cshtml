@model logincoresinup.Models.Employee
@{
    ViewData["Title"] = "AddEmployee";
}

<h1>AddEmployee</h1>

<form asp-action="AddEmployee" asp-controller="Home" method="post">

    <input type="hidden"  asp-for="EmpId"/>
    <div class="form-group">
        <label >EmpName</label>
        <input asp-for="EmpName" type="text" class="form-control" required />
        @*<span  asp-validation-for="EmpName"></span>*@
        
       
    </div>
    <div class="form-group">
        <label>EmpDepartment</label>
        <input asp-for="EmpDepartment" type="text" class="form-control"  required />
 @*       <span class="text-danger" asp-validation-for="EmpDepartment"></span>*@
    </div>
    <div class="form-group">
        <label>EmpSalary</label>
        <input asp-for="Empsalary" type="text" class="form-control"  required/>
    </div>
    <div class="form-group">
        <label>TL</label>
        <input asp-for="TL" type="text"class="form-control" required/>
    </div>
    <div class="form-group">
        <label>FM</label>
        <input asp-for="FM" type="text" class="form-control" required/>
    </div>

    <button type="submit">Submit </button>
    <button type="reset">Reset</button>
</form>
